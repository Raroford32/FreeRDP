# Show help
help: $(PROGRAM)
	./$(PROGRAM) -h

# System optimization for maximum performance
optimize-system:
	@echo "âš™ï¸  Optimizing system for maximum RDP brute force performance..."
	@echo "ğŸ”§ Setting kernel parameters..."
	@sudo sysctl -w net.ipv4.ip_local_port_range="1024 65535" 2>/dev/null || echo "   âš ï¸  Need root for port range optimization"
	@sudo sysctl -w net.core.somaxconn=65535 2>/dev/null || echo "   âš ï¸  Need root for connection queue optimization"
	@sudo sysctl -w net.core.netdev_max_backlog=10000 2>/dev/null || echo "   âš ï¸  Need root for network backlog optimization"
	@sudo sysctl -w net.ipv4.tcp_max_syn_backlog=65535 2>/dev/null || echo "   âš ï¸  Need root for TCP SYN backlog optimization"
	@sudo sysctl -w net.ipv4.tcp_fin_timeout=15 2>/dev/null || echo "   âš ï¸  Need root for TCP timeout optimization"
	@sudo sysctl -w net.ipv4.tcp_tw_reuse=1 2>/dev/null || echo "   âš ï¸  Need root for TCP reuse optimization"
	@sudo sysctl -w fs.file-max=2000000 2>/dev/null || echo "   âš ï¸  Need root for file descriptor optimization"
	@echo "ğŸ“ˆ Increasing process limits..."
	@ulimit -n 1000000 2>/dev/null || echo "   âš ï¸  Cannot increase file descriptor limit"
	@echo "âœ… System optimization completed (run as root for full optimization)"

# Performance benchmark
benchmark: $(PROGRAM) samples
	@echo "ğŸ“Š Running comprehensive performance benchmark..."
	@echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
	@echo "ğŸ§ª Test 1: Standard mode (200 threads)"
	@time ./$(PROGRAM) -i ips.txt -u users.txt -p passwords.txt -o benchmark_standard.txt -f -t 200
	@echo ""
	@echo "ğŸ§ª Test 2: Aggressive mode (500 threads)"
	@time ./$(PROGRAM) -i ips.txt -u users.txt -p passwords.txt -o benchmark_aggressive.txt -a
	@echo ""
	@echo "ğŸ§ª Test 3: Ultra mode (800 threads)"
	@time ./$(PROGRAM) -i ips.txt -u users.txt -p passwords.txt -o benchmark_ultra.txt -U
	@echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
	@echo "âœ… Benchmark completed! Check benchmark_*.txt files for results."

# Strip binary for minimum size
strip: $(PROGRAM)
	@echo "âœ‚ï¸  Stripping binary for minimum size..."
