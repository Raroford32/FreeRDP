# Clean all generated files
clean:
	@echo "ğŸ§¹ Cleaning up..."
	rm -f $(PROGRAM) *.txt *.log core
	@echo "âœ… Cleanup completed"

# Install to system (optional)
install: $(PROGRAM)
	@echo "ğŸ“¦ Installing $(PROGRAM) to /usr/local/bin..."
	@sudo cp $(PROGRAM) /usr/local/bin/
	@sudo chmod +x /usr/local/bin/$(PROGRAM)
	@echo "âœ… Installed! You can now run '$(PROGRAM)' from anywhere"

# Uninstall from system
uninstall:
	@echo "ğŸ—‘ï¸  Uninstalling $(PROGRAM) from /usr/local/bin..."
	@sudo rm -f /usr/local/bin/$(PROGRAM)
	@echo "âœ… Uninstalled"

